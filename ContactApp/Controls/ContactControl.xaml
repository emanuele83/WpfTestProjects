<UserControl x:Class="ContactApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <!--the first 2 values of background are transparency (alpha channel)-->
    <Grid Margin="5" Background="#66CCCCCC">
        <StackPanel>
            <TextBlock x:Name="nameTextBlock" FontSize="20" FontWeight="Bold" />
            <TextBlock x:Name="emailTextBlock" FontSize="15" Foreground="DodgerBlue" />
            <TextBlock x:Name="phoneTextBlock" FontSize="15" FontStyle="Italic" />
        </StackPanel>
    </Grid>
</UserControl>
