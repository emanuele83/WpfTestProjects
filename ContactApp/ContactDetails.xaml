<Window x:Class="ContactApp.ContactDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApp"
        mc:Ignorable="d"
        Title="ContactDetails" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nameTextbox"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="mailTextbox"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="phoneTextbox"
                     Margin="0,0,0,5"/>
            <Button x:Name="updateButton" Content="Update"
                     Margin="0,0,0,5" Click="UpdateButton_Click"/>
            <Button x:Name="deleteButton" Content="Delete"
                     Margin="0,0,0,5" Background="Red" Foreground="White"
                    Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
